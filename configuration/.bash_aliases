# CUSTOM SHELL ALIASES

# system aliases
# aliases that modify the system (maily ones that need sudo)
alias sysup='sudo apt update && sudo apt upgrade' # normal system update
alias sysupr='sudo apt update && sudo apt upgrade && sudo apt autoremove' # system update and remove unused dependancies

# ease-of-use aliases
# aliases that make other commands and processes easier
alias clr='clear' # clear the screen
